{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "test"],
  "atom": {
    "rewriteTsconfig": false
  },
  "compileOnSave": false
}
